@model ECommerce.ViewModels.TransferVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Transfer</h4>
<hr />
<h6 style="color:red">@ViewBag.ErrorMessage</h6>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <input type="hidden" asp-for="TransferId" value="@Model.TransferId" />
            <input type="hidden" asp-for="IsApprove" value="@Model.IsApprove" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value="@Model.Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />

            <div class="table-responsive mb-3">
                <table class="table table-bordered text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="text-dark">Product</th>
                            <th class="text-dark">Quantity</th>
                            <th class="text-dark">Source Store</th>
                            <th class="text-dark">Destination Store</th>
                            <th class="text-dark">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody id="detailsTable">
                        <tr>
                            <td>
                                @Html.DropDownListFor(
                                         model => model.ProductId,
                                         Model.Products,
                                         "Select a Product",
                                         new { @class = "form-control" }
                                         )
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </td>
                            <td>
                                <input asp-for="Quantity" class="form-control" value="0" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </td>
                            <td>
                                @Html.DropDownListFor(
                                         model => model.SourceStore,
                                         Model.SourceStores,
                                         "Select a Source",
                                         new { @class = "form-control" }
                                         )
                                <span asp-validation-for="SourceStore" class="text-danger"></span>
                            </td>
                            <td>
                                @Html.DropDownListFor(
                                         model => model.DestinationStore,
                                         Model.DestinationStores,
                                         "Select a Destination",
                                         new { @class = "form-control" }
                                         )
                                <span asp-validation-for="DestinationStore" class="text-danger"></span>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-success">Add</button>
                            </td>
                        </tr>
                        @foreach (var item in Model.TransferDetails)
                        {
                            <tr>
                                <td>
                                    @item.ProductName
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @item.SourceStoreName
                                </td>
                                <td>
                                    @item.DestinationStoreName
                                </td>
                                <td>
                                    <a asp-action="RemoveDetail" asp-route-id="@item.Id">Remove</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 d-flex justify-content-end align-items-end">
                    @if (Model.TransferId > 0)
                    {
                        <button type="submit" class="btn btn-success px-4">Save Change</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success px-4">Save</button>
                    }
                </div>
             

            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
